@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div class="d-none d-lg-flex m-1">
        <label>@Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</label>
    </div>
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <div class="d-none d-lg-flex m-1">
            <a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a>
        </div>

    }
}

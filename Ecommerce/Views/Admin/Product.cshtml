@model IEnumerable<Ecommerce.DAL.Tbl_Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Detalle de Productos

        <a href="../Admin/ProductAdd" class="btn btn-info pull-right fa fa-plus">Agregar Productos</a>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Nombre de Producto</th>
                        <th>Accion</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Nombre de Producto</th>
                        <th>Accion</th>
                    </tr>
                </tfoot>
                <tbody>
                    @{int count = 1;

                        foreach (var item in Model)
                        {

                            <tr>
                                <td>@count</td>
                                <td>@item.ProductName</td>
                                <td>
                                    @Html.ActionLink("Editar", "ProductEdit", new { productId = item.ProductId })
                                    @Html.ActionLink("Caracteristicas", "ProductCharacteristic", new { productId = item.ProductId })
                                </td>
                            </tr>
                            count++;
                        }

                    }

                </tbody>
            </table>
        </div>

    </div>
</div>


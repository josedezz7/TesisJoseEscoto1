
@model IEnumerable<Ecommerce.DAL.Tbl_Shipping>

@{
    ViewBag.Title = "Shipping";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Shipping</h2>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Detalle de Ordenes

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Cliente</th>
                        <th>Direccion</th>
                        <th>Ciudad</th>
                        <th>Departamento</th>
                        <th>Telefono</th>
                        <th>Total</th>
                        <th>Fecha</th>
                        <th>Estado</th>
                        <th>Accion</th>

                    </tr>
                </thead>
                <tbody>
                    @{int count = 1;

                        foreach (var item in Model)
                        {

                                        <tr>
                                            <td>@(item?.Tbl_Members?.FirstName??"")</td>
                                            <td>@item.Address</td>
                                            <td>@item.City</td>
                                            <td>@item.Department</td>
                                            <td>@item.Telephone</td>
                                            <td>@item.AmountPaid</td>
                                            <td>@item.Date</td>
                                            <td>@item.Status</td>
                                            <td>
                                                @Html.ActionLink("Ver Detalle", "ProductEdit", new { shippingId = item.ShippingId })
                                            </td>
                                        </tr>
                            count++;
                        }

                    }

                </tbody>
            </table>
        </div>

    </div>
</div>

